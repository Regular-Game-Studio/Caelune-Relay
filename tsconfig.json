{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@discordjs/typings"
    ],

    "module": "nodenext",
    "target": "esnext",
    "types": [],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  }
}
